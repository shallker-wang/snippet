#snippet-code{
	min-height: 100px;
}

/* hide ACE editor's scrollbar */
#ace-editor .ace_scrollbar {
    display: none;
}

#ace-editor {
    min-height: 200px;
}

#snippet-annotation{
    margin: 0;
    padding: 2px 0 0 0;
    max-width: 100%;
    width: 100%;
    height: 100%;
    border: 0;
    border-style: none;
    overflow: hidden;
    text-align: right;
}

#snippet-annotation:focus {
    box-shadow: none;
}